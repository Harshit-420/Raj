{
  "manifest_version": 3,
  "name": "Messenger Message Sender",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/*"],
      "js": ["content.js"]
    }
  ]
}
